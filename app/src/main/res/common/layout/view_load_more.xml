<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/contain_padding">

    <com.wang.avi.AVLoadingIndicatorView
        style="@style/AVLoadingIndicatorView.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        apps:indicatorColor="@color/colorSecondary"
        apps:indicatorName="BallSpinFadeLoaderIndicator" />

    <TextView
        style="@style/TextMedium"
        android:layout_marginTop="@dimen/horizontal_space_small"
        android:text="@string/lb_loading"
        android:textSize="@dimen/text_size_xsmall" />
</LinearLayout>