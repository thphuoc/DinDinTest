<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_activated="false" android:state_focused="false">
        <shape>
            <stroke android:width="0.5dp" android:color="#CCC" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_activated="false" android:state_focused="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/colorSecondary" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_activated="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/red" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/listItemSeparate" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>